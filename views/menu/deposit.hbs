<div class="container">
    <!-- TODO: ADD ACTION URL -->
    <form action="" method="post">
        <h3> Thông tin thẻ để nạp tiền vào ví</h3>
        <div class="mb-3">
            <label for="deposit_card_id" class="form-label">ID thẻ</label>
            <input type="text" class="form-control" id="deposit_card_id" required placeholder="Vui lòng nhập ID thẻ">
        </div>
        <div class="mb-3">
            <label for="deposit_card_date" class="form-label">Ngày hết hạn</label>
            <input type="date" class="form-control" id="deposit_card_date" required  placeholder="Vui lòng nhập Ngày hết hạn thẻ">
        </div>
        <div class="mb-3">
            <label for="deposit_card_cvv" class="form-label">Mã CVV</label>
            <input type="number" class="form-control" id="deposit_card_cvv" required placeholder="Vui lòng nhập CVV thẻ">
        </div>
        <div class="mb-3">
            <label for="deposit_money" class="form-label">Số tiền rút</label>
            <input type="number" class="form-control" id="deposit_money" min="0" step="50000" value="0"  required>
        </div>
        <!-- TODO: ADD DYNAMIC RANGE --->
        <div class="mt-3 mb-3">
            <h4 class="mt-3 text-end">Tổng tiền: <span class="text-danger"  id="u-deposit-total">0 đ</span></h4>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>