<body>
    <section class="vh-100" id="u-login-background-body">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-8 mb-4 mb-lg-0">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div
                                class="col-md-4 u-login-gradient-custom text-center text-white justify-content-center d-flex align-items-center">
                                <a href="/">
                                    <img src="https://play-lh.googleusercontent.com/PtMVPSG8gCNkChbJf1Bbk-coBM4dQP5lVC5ZfHJLgkZJT-AbuDfhyIx4thEB3I9u9Lg"
                                        alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                                </a>
                            </div>
                            <div class="col-md-8 u-login-card-padding">
                                <div class="card-body p-4">
                                    {{#if flash}}
                                    <!-- TODO: DO SOMETHING WITH ALERT-->
                                    <div class="alert alert-{{flash.type}}" role="alert">
                                        {{flash.message}}
                                    </div>
                                    {{/if}}
                                    <h3 class="text-center mb-3">ĐĂNG NHẬP</h3>
                                    <div class="row pt-1">
                                        <!-- TODO: FILL IN URL IN ACTION-->
                                        <form action="/login" method="POST">
                                            <div class="form-group pb-3">
                                                <label for="userid" class="fw-bold pb-3">Tên đăng nhập</label>
                                                <input type="text" class="form-control p-2" id="userid" required
                                                    name="userid" placeholder="Tên đăng nhập có 10 chữ số"
                                                    >
                                            </div>
                                            <div class="form-group pb-3">
                                                <label for="userpass" class="fw-bold pb-3">Mật khẩu</label>
                                                <input type="password" class="form-control p-2" id="userpass" required
                                                    placeholder="Vui lòng nhập mật khẩu" name="userpass">
                                            </div>
                                            <!-- TODO: FILL IN URL SUBMIT BUTTON-->
                                            <div class="d-flex justify-content-center py-4">
                                                <button type="submit" class="btn btn-success u-login-btn-login">Đăng
                                                    nhập</button>
                                            </div>
                                        </form>
                                        <div class="d-flex justify-content-between">
                                            <a href="/reset" class="text-success">Quên mật khẩu</a>
                                            <a href="/register" class="text-success">Đăng ký tài khoản</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>