<body>
    <section class="vh-100" id="u-login-background-body">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-8 mb-4 mb-lg-0">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div
                                class="col-md-4 u-login-gradient-custom text-center text-white justify-content-center d-flex align-items-center">
                                <a href="/">
                                    <img src="https://play-lh.googleusercontent.com/PtMVPSG8gCNkChbJf1Bbk-coBM4dQP5lVC5ZfHJLgkZJT-AbuDfhyIx4thEB3I9u9Lg"
                                        alt="Avatar" class="img-fluid my-5" style="width: 80px;" />

                                </a>
                            </div>
                            <div class="col-md-8 u-login-card-padding">
                                <div class="card-body p-4">
                                    {{#if flash}}
                                    <!-- TODO: DO SOMETHING WITH ALERT-->
                                    <div class="alert alert-{{flash.type}}" role="alert">
                                        {{flash.message}}
                                    </div>
                                    {{/if}}
                                    <div id="resetpass_error" class="alert " role="alert"></div>
                                    <h3 class="text-center mb-3">KHÔI PHỤC MẬT KHẨU</h3>
                                    <form action="/verify" method="post">
                                    <div class="row pt-1">
                                        <!-- TODO: FILL IN URL IN ACTION-->
                                        {{!-- <form action="/reset" method="POST"> --}}
                                            <div class="form-group pb-3">
                                                <label for="user_email" class="fw-bold pb-3">Email</label>
                                                <input type="email" class="form-control p-2" id="resetpass_email"
                                                    required name="resetpass_email" placeholder="Vui lòng nhập email">
                                            </div>
                                            <div class="form-group pb-3">
                                                <label for="user_phone" class="fw-bold pb-3">Số điện thoại</label>
                                                <input type="text" class="form-control p-2" id="resetpass_phone"
                                                    required placeholder="Vui lòng số điện thoại khôi phục"
                                                    name="resetpass_phone">
                                            </div>
                                            <div class="form-group pb-3">
                                                <label for="user_phone" class="fw-bold">Mã OTP</label>
                                            </div>
                                            <div class="input-group mb-3">
                                                <input type="text" class="form-control" id="reset_otp" name="reset_otp"
                                                    placeholder="Vui lòng nhập Mã xác thực OTP"
                                                    aria-describedby="button_send_otp" required>
                                                {{!-- <form action="/" method="post"> --}}

                                                    <!--TODO: CHANGE ID TO SESSION USER ID FROM ONCLICK BTN -->
                                                    <button class="btn btn-primary" type="button"
                                                        id="button_send_otp_resetpass" onclick="sendResetPassOTP(event)">Gửi mã
                                                        OTP</button>
                                                {{!-- </form> --}}

                                            </div>
                                            {{!--
                                        </form> --}}
                                    </div>
                                    <!-- TODO: FILL IN URL SUBMIT BUTTON-->
                                    <div class="d-flex justify-content-center py-4">

                                        <button type="submit" class="btn btn-success u-login-btn-login">Khôi
                                            phục mật khẩu</button>
                                       
                                </div>
                                </form>
                                <div class="d-flex justify-content-end">
                                    <a href="/login" class="text-success">Quay lại trang đăng nhập</a>
                                    <script src="/js/main.js"></script>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
    </section>
</body>